{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2015",
    "declaration": true,
    "jsx": "react",
    "module": "ESNext",
    "declarationDir": "dist",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*"]
}
